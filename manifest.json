{
  "manifest_version": 2,
  "name": "DateNight",
  "version": "1.0",
  "description": "Allows users to sync movies and other streaming media to more easily share time with each other",
  "content_scripts": [
    {
      "matches": ["*://*.hulu.com/*"],
      "js": ["node_modules/webextension-polyfill/dist/webextension-polyfill.min.js", "helper.js"]
    }
  ],
  "background": {
    "scripts": ["node_modules/webextension-polyfill/dist/webextension-polyfill.min.js", "connector.js"]
  },
  "options_ui": {
    "page": "options/index.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_icon": "scheme.png",
    "default_title": "DateNight"
  },
  "permissions": [
    "notifications",
    "activeTab",
    "storage"
  ],
  "applications": {
    "gecko": {
      "id": "insert.available.name@gmail.com"
    }
  }
}
